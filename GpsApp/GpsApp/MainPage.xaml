             xmlns:local="clr-namespace:GpsApp"
             x:Class="GpsApp.MainPage" BackgroundColor="White">

    <StackLayout>
        <!-- Place new controls here -->
        <Image Source="logo.jpg" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
